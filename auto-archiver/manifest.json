{
  "manifest_version": 3,
  "name": "Focused Tab Auto Save",
  "version": "0.1",
  "description": "Auto-saves content only from the currently focused tab.",

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "downloads",
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
